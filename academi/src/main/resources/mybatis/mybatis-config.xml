<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<!-- DTO에 대한 축약형 등록 -->
	<typeAliases>
	<typeAlias type="com.example.dto.Users" alias ="users"/>
	<typeAlias type="com.example.dto.Comments" alias ="comments"/>
	<typeAlias type="com.example.dto.Review" alias ="review"/>
	<typeAlias type="com.example.dto.Route" alias ="route"/>
	<typeAlias type="com.example.dto.CommentReply" alias ="commentReply"/>
	</typeAliases>
	
	<mappers>
	
	<mapper resource="mybatis/mapper/UsersMapper.xml" />
	<mapper resource="mybatis/mapper/CommentsMapper.xml" />
	<mapper resource="mybatis/mapper/CommentReplyMapper.xml" />
	</mappers>

</configuration>